<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="AudioReplacer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="SegoeFluentIcons">Assets/Font/SegoeFluentIcons/SegoeFluentIcons.ttf#SegoeFluentIcons</FontFamily>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Resources/Styles.xaml"/>
                <ResourceDictionary Source="/Resources/ButtonResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{ThemeResource AccentFillColorTertiaryBrush}"/>
                    <BitmapImage x:Key="AppIconSource" UriSource="Assets/Icon/AppIcon-Dark.png" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <BitmapImage x:Key="AppIconSource" UriSource="Assets/Icon/AppIcon-Light.png" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
