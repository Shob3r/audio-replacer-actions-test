<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AudioReplacer.MainWindow.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:AudioReplacer.MainWindow.PageData"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="using:CommunityToolkit.Labs.WinUI.MarkdownTextBlock"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">
    <Page.DataContext>
        <data:HomePageData />
    </Page.DataContext>

    <Grid VerticalAlignment="Stretch" ColumnDefinitions="*, *">
        <Grid
            Margin="0,0,0,10"
            VerticalAlignment="Stretch"
            Column="0"
            RowDefinitions="*, *">
            <Border
                Grid.Row="0"
                Margin="10"
                Padding="10,20"
                Style="{StaticResource PanelCard}">
                <Grid RowDefinitions="Auto, *">
                    <TextBlock
                        Grid.Row="0"
                        Style="{StaticResource TitleText}"
                        Text="Projects" />
                    <Grid
                        Padding="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        ColumnDefinitions="Auto, Auto"
                        Row="1">
                        <Border
                            Grid.Column="0"
                            Margin="0,0,25,0"
                            Style="{StaticResource HomePageActionCard}">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock
                                    Margin="0,15,0,5"
                                    Style="{StaticResource ActionCardTitle}"
                                    Text="Load Previous Project" />
                                <TextBlock
                                    Margin="0,-5,0,10"
                                    HorizontalAlignment="Center"
                                    Foreground="Gray"
                                    Text="{Binding FolderName}"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                                <Button
                                    MinWidth="100"
                                    Command="{Binding LoadPreviousProjectCommand}"
                                    Content="Load"
                                    IsEnabled="{Binding PreviousProjectExists}"
                                    Style="{StaticResource AccentedButton}" />
                            </StackPanel>
                        </Border>
                        <Border
                            Grid.Column="1"
                            Margin="25,0,0,0"
                            Style="{StaticResource HomePageActionCard}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Style="{StaticResource ActionCardTitle}" Text="Open Other Project" />
                                <Button
                                    MinWidth="100"
                                    Margin="0,13,0,0"
                                    Command="{Binding OpenNewProjectCommand}"
                                    Content="Select Folder"
                                    Style="{StaticResource AccentedButton}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
            <Border
                Grid.Row="1"
                Margin="10,10,10,0"
                Padding="10"
                Style="{StaticResource PanelCard}">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,15"
                        VerticalAlignment="Top"
                        Style="{StaticResource TitleText}"
                        Text="Tips" />
                    <FlipView
                        Padding="10"
                        Background="Transparent "
                        CornerRadius="4">
                        <TextBlock FontSize="50" Text="Ex1" />
                        <TextBlock Text="Ex2" />
                        <TextBlock Text="Ex3" />
                        <TextBlock Text="Ex4" />
                    </FlipView>
                </StackPanel>
            </Border>
        </Grid>
        <Grid Column="1" RowDefinitions="*">
            <Border
                Margin="10"
                Padding="15"
                Style="{StaticResource PanelCard}">
                <Grid RowDefinitions="Auto, *">
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,10"
                        Style="{StaticResource TitleText}"
                        Text="Latest Changes:" />
                    <ScrollViewer
                        Grid.Row="1"
                        VerticalScrollBarVisibility="Visible"
                        VerticalScrollMode="Enabled">
                        <md:MarkdownTextBlock
                            x:Name="MarkdownText"
                            Padding="5"
                            AllowFocusOnInteraction="False"
                            FontSize="20"
                            FontWeight="Medium"
                            Text="# No Recent Changes Found."
                            UseAutoLinks="True"
                            UseEmphasisExtras="True"
                            UseListExtras="True"
                            UsePipeTables="True"
                            UseTaskLists="True" />
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
