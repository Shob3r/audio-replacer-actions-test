<?xml version="1.0" encoding="utf-8" ?>

<ex:WindowEx
    x:Class="AudioReplacer.MainWindow.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ex="using:WinUIEx"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    Title="Audio Replacer"
    Width="1500"
    Height="700"
    MinWidth="1500"
    MinHeight="700"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            x:Name="AppTitleBar"
            Grid.Row="0"
            Height="50"
            Padding="15"
            VerticalAlignment="Top">
            <StackPanel>
                <Grid ColumnDefinitions="Auto, *">
                    <FontIcon Glyph="&#xEC71;" Style="{StaticResource TitleBarIcon}" />
                    <TextBlock
                        x:Name="AppTitle"
                        Grid.Column="1"
                        Style="{StaticResource TitleBarText}"
                        Text="Audio Replacer" />
                </Grid>
            </StackPanel>
        </Border>

        <NavigationView
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="False"
            ItemInvoked="Navigate"
            PaneDisplayMode="Left">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Home"
                    Icon="{ui:FontIcon Glyph=&#xE80F;}"
                    Tag="Home" />
                <NavigationViewItem
                    Content="Record"
                    Icon="{ui:FontIcon Glyph=&#xE720;}"
                    Tag="Record" />
                <NavigationViewItem
                    Content="Data Editor"
                    Icon="{ui:FontIcon Glyph=&#xE70F;}"
                    Tag="Data Editor" />
            </NavigationView.MenuItems>
            <Frame
                x:Name="MainFrame"
                Padding="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <EntranceThemeTransition />
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
        </NavigationView>

        <StackPanel Grid.Row="1">
            <InfoBar
                x:Name="GeneralNotificationPopup"
                Margin="0,0,0,-75"
                Style="{StaticResource Notification}">
                <InfoBar.Transitions>
                    <PopupThemeTransition />
                </InfoBar.Transitions>
            </InfoBar>
            <InfoBar
                x:Name="InProgressNotification"
                Margin="0,0,0,-75"
                Background="{ThemeResource SystemFillColorSolidAttentionBackgroundBrush}"
                IsClosable="False"
                Severity="Informational"
                Style="{StaticResource Notification}">
                <InfoBar.Content>
                    <ProgressBar IsIndeterminate="True" />
                </InfoBar.Content>
                <InfoBar.Transitions>
                    <PopupThemeTransition />
                </InfoBar.Transitions>
            </InfoBar>
            <InfoBar
                x:Name="CompletionNotification"
                Margin="0,0,0,-75"
                Background="{ThemeResource SystemFillColorSolidAttentionBackgroundBrush}"
                IsClosable="False"
                Severity="Informational"
                Style="{StaticResource Notification}">
                <InfoBar.Content>
                    <ProgressBar x:Name="CompletionProgressBar" IsIndeterminate="False" />
                </InfoBar.Content>
                <InfoBar.Transitions>
                    <PopupThemeTransition />
                </InfoBar.Transitions>
            </InfoBar>

            <InfoBar
                x:Name="UpdateAvailableNotification"
                Title="An Update Is Available"
                MinWidth="250"
                Margin="0,0,0,-75"
                Background="{ThemeResource SystemFillColorSolidAttentionBackgroundBrush}"
                IsClosable="True"
                Severity="Informational"
                Style="{StaticResource Notification}">
                <InfoBar.ActionButton>
                    <HyperlinkButton
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Click="DownloadUpdate"
                        Content="Download Update" />
                </InfoBar.ActionButton>
                <InfoBar.Transitions>
                    <PopupThemeTransition />
                </InfoBar.Transitions>
            </InfoBar>
        </StackPanel>
    </Grid>
</ex:WindowEx>
