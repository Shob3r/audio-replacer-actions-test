<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AudioReplacer.Pages.DataEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:Editor="using:WinUIEditor">

    <StackPanel Padding="5.5">
        <StackPanel Orientation="Horizontal" Margin="0 5.5 0 5" VerticalAlignment="Center">
            <Button Click="SaveFile" Margin="15 0 0 0" ToolTipService.ToolTip="Save Changes">
                <Button.Content>
                    <FontIcon Glyph="&#xE74E;" />
                </Button.Content>
            </Button>
            <Button Click="DiscardChanges" Margin="15 0 0 0" ToolTipService.ToolTip="Discard Changes">
                <Button.Content>
                    <FontIcon Glyph="&#xE845;" />
                </Button.Content>
            </Button>
            <ComboBox x:Name="SelectedFile" Margin="700 0 0 0" SelectedIndex="0" SelectionChanged="UpdateEditingFile" Width="200">
                <x:String>PitchData.json</x:String>
                <x:String>AudioEffects.json</x:String>
            </ComboBox>
        </StackPanel>
        <Editor:CodeEditorControl x:Name="CustomDataEditor" HighlightingLanguage="json" MinHeight="400" />
    </StackPanel>
</Page>
