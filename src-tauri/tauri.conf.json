{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "audio-replacer-2",
  "version": "2.0.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },


  "app": {
    "windows": [
      {
        "title": "Audio Replacer 2",
        "width": 1024,
        "height": 425,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "fs-main-perms",
          "description": "if this doesn't work I will cry very hard",
          "windows": ["*"],
          "permissions": ["fs:default"]
        },
        {
          "identifier": "dialog-permissions",
          "description": "what the fuck",
          "windows": ["*"],
          "permissions": ["dialog:default"]
        },
        {
          "identifier": "path-permissions",
          "description": "I'm crying",
          "windows": ["*"],
          "permissions": ["path:default"]
        }
      ],
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
