{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "audio-replacer",
  "version": "5.0.0",
  "identifier": "com.audio-replacer.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Audio Replacer",
        "width": 1200,
        "minWidth": 1200,
        "height": 750,
        "minHeight": 750,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; frame-src 'self' asset: http://asset.localhost; style-src 'self 'unsafe-inline' script-src 'self'; ",
      "assetProtocol": {
        "enable": true,
        "scope": ["."]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "binaries/whisper.bin",
      "resources/settings.json",
      "resources/effectData.json",
      "resources/pitchData.json",
      "binaries/ffmpeg-core.js",
      "binaries/ffmpeg.wasm"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      },
      "deb": {
        "files": {}
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      }
    }
  }
}
