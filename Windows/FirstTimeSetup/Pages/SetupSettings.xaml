<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AudioReplacer.Windows.FirstTimeSetup.Pages.SetupSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:firstTimeSetup="using:AudioReplacer.Windows.FirstTimeSetup"
    xmlns:local="using:AudioReplacer.Windows.FirstTimeSetup.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    xmlns:ui="using:CommunityToolkit.WinUI"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.DataContext>
        <firstTimeSetup:SetupData />
    </Page.DataContext>

    <Grid VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="10"
            Opacity="10">
            <Image
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/Assets/SetupIntro.png" />
        </Border>

        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            Background="{ThemeResource LayerFillColorAltBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            CornerRadius="4">
            <Grid Padding="35">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="55"
                        FontWeight="Medium"
                        Text="Common Settings"
                        TextWrapping="WrapWholeWords" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="25"
                        FontWeight="Light"
                        Text="Configure the app to your liking"
                        TextWrapping="WrapWholeWords" />
                </StackPanel>

                <AppBarButton
                    Width="75"
                    Height="35"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Command="{Binding NextPageCommand}"
                    Style="{StaticResource AccentButtonStyle}">
                    <AppBarButton.Content>
                        <TextBlock
                            Padding="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="18"
                            FontWeight="Normal"
                            Text="Next"
                            TextAlignment="Center" />
                    </AppBarButton.Content>
                </AppBarButton>
            </Grid>
        </Border>
    </Grid>
</Page>
