<?xml version="1.0" encoding="utf-8" ?>

<WinUiEx:WindowEx
    x:Class="AudioReplacer.Windows.MainWindow.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Ui="using:CommunityToolkit.WinUI"
    xmlns:WinUiEx="using:WinUIEx"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Audio Replacer"
    Width="1500"
    Height="700"
    MinWidth="1500"
    MinHeight="700"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border
            x:Name="AppTitleBar"
            Grid.Row="0"
            Height="65"
            Padding="5"
            VerticalAlignment="Top"
            BorderThickness="5">
            <StackPanel>
                <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto">
                    <FontIcon Glyph="&#xEC71;" Style="{StaticResource TitleBarIcon}" />
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBlock
                            x:Name="AppTitle"
                            Style="{StaticResource TitleBarText}"
                            Text="Audio Replacer" />
                        <AppBarButton
                            x:Name="FolderChanger"
                            Width="145"
                            Height="45"
                            Margin="35,0,0,5"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Background="{ThemeResource ControlFillColorSecondaryBrush}"
                            Click="ChangeProjectFolder"
                            Content="Change Project Folder"
                            CornerRadius="4"
                            FontSize="17"
                            FontWeight="Medium" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <NavigationView
            Grid.Row="1"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="False"
            ItemInvoked="Navigate"
            PaneDisplayMode="Left">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Record"
                    Icon="{Ui:FontIcon Glyph=&#xE720;}"
                    Tag="Record" />
                <NavigationViewItem
                    Content="Data Editor"
                    Icon="{Ui:FontIcon Glyph=&#xE70F;}"
                    Tag="Data Editor" />
                <!-- <NavigationViewItem Content="Project Importer" Icon="{Ui:FontIcon Glyph=&#xE8B6;}" Tag="Project Importer" /> -->
                <NavigationViewItem
                    Content="Release Notes"
                    Icon="{Ui:FontIcon Glyph=&#xE777;}"
                    Tag="Update Logs" />
            </NavigationView.MenuItems>
            <Frame
                x:Name="MainFrame"
                Padding="10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Frame.ContentTransitions>
                    <TransitionCollection>
                        <EntranceThemeTransition />
                    </TransitionCollection>
                </Frame.ContentTransitions>
            </Frame>
        </NavigationView>

        <StackPanel Grid.Row="1">
            <InfoBar
                x:Name="GeneralNotificationPopup"
                Margin="0,0,0,-75"
                Style="{StaticResource ToastNotification}">
                <InfoBar.Transitions>
                    <PopupThemeTransition />
                </InfoBar.Transitions>
            </InfoBar>
            <InfoBar
                x:Name="InProgressNotification"
                Margin="0,0,0,-75"
                Background="{ThemeResource SystemFillColorSolidAttentionBackgroundBrush}"
                IsClosable="False"
                Severity="Informational"
                Style="{StaticResource ToastNotification}">
                <InfoBar.Content>
                    <ProgressBar IsIndeterminate="True" />
                </InfoBar.Content>
                <InfoBar.Transitions>
                    <PopupThemeTransition />
                </InfoBar.Transitions>
            </InfoBar>
        </StackPanel>
    </Grid>
</WinUiEx:WindowEx>
