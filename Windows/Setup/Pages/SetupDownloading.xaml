<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AudioReplacer.Windows.Setup.Pages.SetupDownloading"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Models="using:AudioReplacer.Windows.Setup"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.DataContext>
        <Models:SetupData />
    </Page.DataContext>

    <Grid
        VerticalAlignment="Stretch"
        ColumnDefinitions="1*, 3*"
        RowDefinitions="*">
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="10"
            Opacity="10">
            <Image
                MaxWidth="375"
                Margin="32"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/Assets/SetupDownloading.png" />
        </Border>
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            Background="{ThemeResource LayerFillColorAltBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            CornerRadius="4">
            <Grid Padding="35">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="55"
                        FontWeight="Medium"
                        Text="Downloading Additional Data"
                        TextWrapping="WrapWholeWords" />
                    <TextBlock
                        Margin="0,0,0,85"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="25"
                        FontWeight="Light"
                        Text="Please stay connected to the internet"
                        TextWrapping="WrapWholeWords" />
                    <ProgressBar MaxWidth="500" IsIndeterminate="True" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
